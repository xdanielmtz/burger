<h1>Delicious Burgers!</h1>

<h2>Burgers Not Eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Have You Eaten This Burger?</label><br>
    <input type="radio" name="eaten" value="1" checked> I Demolished That Burger<br>
    <input type="radio" name="eaten" value="0"> No
  </div>

  <button type="submit">Add</button>
</form>
