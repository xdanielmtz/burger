<h1>Delicious Burgers!</h1>

<h2>Burgers Not Eaten</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <br>
  <div class="form-group">
    <label for="sleepy">Have You Eaten This Burger?</label><br>
    <input type="radio" name="sleepy" value="1" checked> I Demolished That Burger<br>
    <input type="radio" name="sleepy" value="0"> Not Yet!
  </div>

  <button type="submit">Add</button>
</form>
