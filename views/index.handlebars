<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Cat Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Sleepy?</label><br>
    <input type="radio" name="eaten" value="1" checked> Sleepy!<br>
    <input type="radio" name="eaten" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
